---
import Icon from "astro-icon";
import NavLink from "./NavLink.astro";
import ThemeToggle from "./ThemeToggle.astro"
import { navData } from "../../src/data/navData"

---

<!--  navbar -->
<nav
  id="content-top"
  class="navbar flex justify-between p-5 top-0 sticky w-full z-20 border-b-[1px] border-steelBlueGray/20   transition-all ease-out duration-300 bg-creamyWhite sm:absolute lg:max-w-screen-xl dark:bg-[#2d364a] select-none"
  role="navigation"
  transition:animate="initial"
  transition:persist
  >
  <!--  navbar logo section -->
  <a href="/" class="flex justify-center content-end gap-2 w-50 h-10">
    <Icon name="logo-icon" class=" w-8 text-slateBlue dark:text-creamyWhite  "/>
    <h1 class="hidden leading-10 text-xl font-bold  text-slateBlue dark:text-creamyWhite md:block ">Tim's dev.</h1>
  </a>
  <!-- mobile menu switch -->
  <input
    id="input-toggle"
    type="checkbox"
    class="group peer input-toggle absolute right-0 top-1 w-8 h-8 cursor-pointer opacity-0 -z-20 pointer-events-none sm:hidden hover:text-slateBlue"
  />
  <!-- nav items -->
  <ul
    id="menu-list"
    class="menu-list flex w-full flex-col justify-center pb-5 px-5 gap-5  absolute top-20 left-1/2 transform -translate-x-1/2 shadow-md  origin-top scale-y-0 transition-all ease-out duration-300 bg-creamyWhite peer-checked:scale-100 sm:scale-y-100 sm:flex-row sm:w-auto sm:top-5 sm:leading-10 sm:shadow-none sm:p-0  dark:shadow-regal-blue dark:bg-[#2d364a]"
  >
    {
      navData.map((item) => (
        <li class="w-full flex justify-center leading-10 active:text-slateBlue opacity-0 peer-checked:opacity-100  sm:opacity-100">
          <NavLink text={item.text} href={item.path} iconName={item.iconName}/>
        </li>
      ))
    }
  </ul>
  <!-- right side theme toggle -->
  <div class="hamburger-area flex justify-center items-center gap-4">
    <ThemeToggle />
    <!-- mobile menu switch -->
    <label for="input-toggle" class="group flex items-center justify-center w-fit cursor-pointer sm:hidden">
      <div class="hamburger">
        <span class=" duration-300 ease-out group-hover:bg-slateBlue dark:group-hover:bg-creamyWhite"></span>
        <span class="duration-300 ease-out group-hover:bg-slateBlue dark:group-hover:bg-creamyWhite"></span>
        <span class="duration-300 ease-out group-hover:bg-slateBlue dark:group-hover:bg-creamyWhite"></span>
      </div>
    </label>
  </div>
</nav>

<!-- hidden navbar script -->
<script is:inline>
  const nav = document.body.classList;
  let scrollY = 0;

  function handleScroll() {
    let startPoint = window.scrollY;

    if (startPoint < scrollY) {
      nav.remove("navbar");
    } else {
      nav.add("navbar");
    }
    scrollY = startPoint;
  }

  window.addEventListener('scroll', handleScroll)

</script>
