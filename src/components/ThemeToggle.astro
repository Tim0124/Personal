---
import { Icon } from "astro-icon";
---
<!-- theme toggle button -->
<button
  id="theme-toggle"
  type="button"
  class="relative cursor-pointer"
  transition:persist
>
  <Icon
    id="theme-toggle-light-icon"
    name="light-theme-icon"
    class="w-8 hidden  text-steelBlueGray hover:text-creamyWhite transform hover:-rotate-45 transition duration-300 ease-out"
  />
  <Icon
    id="theme-toggle-dark-icon"
    name="dark-theme-icon"
    class="w-7 hidden rotate-12 hover:text-slateBlue transform hover:-rotate-12 transition duration-300 ease-out"
  />
</button>

